{
  // --- cSpell: Prisma関連の用語を許可 ---
  "cSpell.words": [
    "cuid",
    "Prisma",
    "datasource",
    "dbgenerated",
    "PostgreSQL",
    "Neon"
  ],

  // PrismaファイルでもcSpellを使う（既定で効いていれば実害なし）
  "cSpell.enableFiletypes": ["prisma"],

  // （任意）Prisma拡張の言語モード名に合わせる
  "files.associations": {
    "*.prisma": "prisma"
  }
}
