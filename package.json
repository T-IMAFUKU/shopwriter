{
  "name": "shopwriter-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "prisma:generate:prod": "PRISMA_CLI_QUERY_ENGINE_TYPE=binary prisma generate",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:resolve": "prisma migrate resolve",
    "typecheck": "tsc --noEmit",
    "test": "cross-env NODE_OPTIONS=--require=./tests/preload-env.cjs vitest run --passWithNoTests",
    "test:watch": "cross-env NODE_OPTIONS=--require=./tests/preload-env.cjs vitest --watch",
    "test:writer": "cross-env NODE_OPTIONS=--require=./tests/preload-env.cjs vitest run --passWithNoTests -t writer",
    "test:precision": "cross-env NODE_OPTIONS=--require=./tests/preload-env.cjs vitest run tests/api/writer.precision.plan.test.ts --passWithNoTests",
    "test:shares": "cross-env NODE_OPTIONS=--require=./tests/preload-env.cjs vitest run tests/api/shares.route.test.ts",
    "test:all": "cross-env NODE_OPTIONS=--require=./tests/preload-env.cjs vitest run --passWithNoTests",
    "test:all:lenient": "cross-env NODE_OPTIONS=--require=./tests/preload-env.cjs vitest run --passWithNoTests --test-timeout=30000",
    "vitest:one": "cross-env NODE_OPTIONS=--require=./tests/preload-env.cjs vitest run",
    "vitest:file": "cross-env NODE_OPTIONS=--require=./tests/preload-env.cjs vitest run --reporter=verbose",
    "test:lp": "cross-env NODE_OPTIONS=--require=./tests/preload-env.cjs vitest run tests/api/writer.samples.lp.test.ts --reporter=verbose"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@emotion/is-prop-valid": "^1.4.0",
    "@hookform/resolvers": "^3.10.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "6.15.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.18.2",
    "jose": "4.15.9",
    "lucide-react": "^0.542.0",
    "next": "14",
    "next-auth": "^4.24.11",
    "openai": "^5.19.1",
    "react": "18",
    "react-dom": "18",
    "react-hook-form": "^7.62.0",
    "react-markdown": "^10.1.0",
    "recharts": "^3.2.1",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "stripe": "^20.0.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/jest": "^30.0.0",
    "@types/node": "24.3.1",
    "@types/react": "19.1.12",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.5.6",
    "prisma": "6.15.0",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.12.0",
  "pnpm": {
    "overrides": {
      "@radix-ui/react-focus-guards@*": "1.1.2",
      "@radix-ui/react-focus-guards": "1.1.2"
    }
  }
}
