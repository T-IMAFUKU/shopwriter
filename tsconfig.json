{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022","DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },

    // ★ 修正: vitest/globals を外す
    "types": ["node"],

    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "tests/**/*",
    "next-env.d.ts",
    "vitest.config.ts",
    ".next/types/**/*.ts",
    "types/**/*"
  ],
  "exclude": ["node_modules",".next","dist"]
}
