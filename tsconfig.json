{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["lib/*", "src/lib/*"],
      "@/components/*": ["components/*", "src/components/*"],
      "@/app/*": ["app/*", "src/app/*"],
      "@/*": ["./*", "./src/*"],
      "@/contracts": ["contracts/index.ts", "src/contracts/index.ts"],
      "@/contracts/*": ["contracts/*", "src/contracts/*"]
    },
    "esModuleInterop": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    ".next",
    "backup",
    "**/backup/**",
    ".logs",
    "**/.logs/**",
    "_collect",
    "**/_collect/**",
    "lib/notify.ts",
    "_safety_untracked_dump",
    "**/_safety_untracked_dump/**"
  ]
}
