/* ShopWriter UI Tokens & Utilities (Step 1.11) */
/* Tailwind layers */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* ===========================
   Design Tokens (CSS Variables)
   =========================== */
:root {
  /* Radius */
  --ui-radius-sm: 0.375rem;  /* 6px */
  --ui-radius-md: 0.5rem;    /* 8px */
  --ui-radius-lg: 0.75rem;   /* 12px */

  /* Shadow */
  --ui-shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.08);
  --ui-shadow-md: 0 4px 12px -2px rgb(0 0 0 / 0.12);
  --ui-shadow-lg: 0 12px 32px -8px rgb(0 0 0 / 0.18);

  /* Spacing (baseline = 4px) */
  --ui-space-1: 0.25rem;  /* 4 */
  --ui-space-2: 0.5rem;   /* 8 */
  --ui-space-3: 0.75rem;  /* 12 */
  --ui-space-4: 1rem;     /* 16 */
  --ui-space-5: 1.25rem;  /* 20 */
  --ui-space-6: 1.5rem;   /* 24 */

  /* Border / Ring (optional hooks) */
  --ui-border: 1px;
  --ui-ring: 2px;

  /* Defaults applied by .ui-* helpers */
  --ui-radius: var(--ui-radius-md);
  --ui-shadow: var(--ui-shadow-md);
  --ui-space-inline: var(--ui-space-3);
  --ui-space-block: var(--ui-space-3);
  --ui-gap: var(--ui-space-3);
}

/* Density presets */
.ui-density-compact {
  --ui-radius: var(--ui-radius-sm);
  --ui-space-inline: var(--ui-space-2);
  --ui-space-block: var(--ui-space-2);
  --ui-gap: var(--ui-space-2);
}
.ui-density-comfortable {
  --ui-radius: var(--ui-radius-lg);
  --ui-space-inline: var(--ui-space-4);
  --ui-space-block: var(--ui-space-3);
  --ui-gap: var(--ui-space-3);
}

/* ===========================
   Base
   =========================== */
@layer base {
  html { scroll-behavior: smooth; }
  body { @apply bg-background text-foreground; }
}

/* ===========================
   Component Patterns
   =========================== */
@layer components {
  /* Card surface with unified spacing/radius/shadow */
  .ui-card {
    border-radius: var(--ui-radius);
    box-shadow: var(--ui-shadow);
    padding: var(--ui-space-block) var(--ui-space-inline);
    background-color: hsl(var(--card));
    color: hsl(var(--card-foreground));
  }

  /* Header bar tokenized spacing & radius */
  .ui-header {
    border-radius: var(--ui-radius);
    box-shadow: var(--ui-shadow-sm);
    padding-inline: var(--ui-space-inline);
    padding-block: var(--ui-space-2);
    background-color: hsl(var(--background));
  }

  /* Button container defaults (works with shadcn/ui Button) */
  .ui-btn {
    border-radius: var(--ui-radius);
    box-shadow: var(--ui-shadow-sm);
  }
}

/* ===========================
   Utility Shims (token-first)
   =========================== */
@layer utilities {
  /* Radius */
  .ui-rounded      { border-radius: var(--ui-radius); }
  .ui-rounded-sm   { border-radius: var(--ui-radius-sm); }
  .ui-rounded-md   { border-radius: var(--ui-radius-md); }
  .ui-rounded-lg   { border-radius: var(--ui-radius-lg); }

  /* Shadow */
  .ui-shadow       { box-shadow: var(--ui-shadow); }
  .ui-shadow-sm    { box-shadow: var(--ui-shadow-sm); }
  .ui-shadow-md    { box-shadow: var(--ui-shadow-md); }
  .ui-shadow-lg    { box-shadow: var(--ui-shadow-lg); }

  /* Padding & Gap (inline/block aware) */
  .ui-p        { padding: var(--ui-space-block) var(--ui-space-inline); }
  .ui-px       { padding-left: var(--ui-space-inline); padding-right: var(--ui-space-inline); }
  .ui-py       { padding-top: var(--ui-space-block);  padding-bottom: var(--ui-space-block); }
  .ui-gap      { gap: var(--ui-gap); }

  /* Direct var() shortcuts compatible with Tailwind arbitrary values */
  .rounded-var       { border-radius: var(--ui-radius); }
  .shadow-var        { box-shadow: var(--ui-shadow); }
  .p-var             { padding: var(--ui-space-3); } /* default */
}

/* ===========================
   Notes:
   - Replace legacy classes like rounded-*, shadow-*, p-*, gap-* with .ui-* helpers
   - Example: rounded-[var(--ui-radius-md)], shadow-[var(--ui-shadow-md)]
   - Example: p-[var(--ui-space-3)], gap-[var(--ui-space-3)]
   - Density can be switched via <body class="ui-density-compact">
=========================== */
